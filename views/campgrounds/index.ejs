<% include ../partials/header %> 

     <header class="jumbotron " id="t2">
         <div class="container" >
             <h1><span class="glyphicon glyphicon-apple"></span> Welcome To Foodzoa!</h1>
             <p>View our hand-picked food delights from all over the world</p>
             <p>
                <a class="btn btn-success btn-lg" href="/campgrounds/new">Add New Food Items</a>
             </p>
              <p>
              <form action="/campgrounds" method="GET" class="form-inline" id="campground-search">
                <div class="form-group">
                  <input type="text" name="search" placeholder="food items search..." class="form-control">
                </div>
              </form>
             </p>
         </div>
     </header>
     
     <div class="row text-center flex-wrap" id="campground-grid">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= campground.image %>">
                   <div class="caption">
                       <h4><%= campground.name %></h4>
                   </div>
                   <div>
                    <span class="badge label-primary"><i class="fas fa-thumbs-up"></i> <%= campground.likes.length %></span>
                </div>
                   <p>
                       <a href="/campgrounds/<%= campground._id %>" class="btn btn-success">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>

<% include ../partials/footer %>
